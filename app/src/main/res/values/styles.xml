<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="nav_bar_color">@color/nav_bar_color</item>
        <item name="prominent_text_color">@color/prominent_text_color</item>
        <item name="android:colorBackground">@color/colorSurface</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="iconTint">?attr/prominent_text_color</item>
        <item name="actionMenuTextAppearance">@style/ToolbarMenuItemTextAppearance</item>
    </style>

    <style name="ToolbarMenuItemTextAppearance" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
